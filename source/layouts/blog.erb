<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title><%= current_page.data.title || "Syndesis" %></title>

    <%= stylesheet_link_tag :screen, media: :screen %>

    <%= stylesheet_link_tag :print, media: :print %>
    <% if current_page.data.search %>
      <%= javascript_include_tag  "all" %>
    <% else %>
      <%= javascript_include_tag  "all_nosearch" %>
    <% end %>
    <%= favicon_tag 'images/favicon.ico' %>
  </head>

  <body class="<%= page_classes %> container-fluid">
    <%= partial "includes/announcement" %>
    <%= partial "includes/navbar" %>

    <a href="#" id="nav-button">
      <span>
        <%= image_tag('syndesis-02.png') %>
      </span>
    </a>

    <div class="page-wrapper">

	  <div class="row header">
	    <div class="title">
	      <h1><%= current_page.data.title %></h1>
	      <p>by <span class="author"><%= current_page.data.author %></span> on <%= current_page.data.date %></p>
	    </div>
	    <div class="share"></div>
	  </div>

      <div class="row content">
        <%= yield %>
        <% current_page.data.includes && current_page.data.includes.each do |include| %>
          <%= partial "includes/#{include}" %>
        <% end %>
      </div>
    </div>

	<%= partial "includes/pre-footer" %>
    <%= partial "includes/footer" %>
  </body>
</html>
